<%- include('header.ejs'); -%>



<div class="box">

    <div class="addBook"> 
     
      <form class="formAdd" action="/add" method="post">
        <button class="addButton" type="button" name="list" onclick="addBook()"> <img class="icon"src="/styles/icons/book-sparkles.svg" alt="book image">      Add Book</button>
        
            
       
        <div class="row">

          <div class="column">
            <input id= "title-input" type="text" name="title" placeholder="Book Title" autocomplete="off" autofocus="true" class="hidden"/><br>
            <input id= "author-input" type="text" name="author" placeholder="Author" autocomplete="off" autofocus="true" class="hidden" /><br>
            <input id= "recency-input" type="text" name="recency" placeholder="Recency" autocomplete="off" autofocus="true" class="hidden"/><br>
          </div>

          <div class="column">
            <input id= "type-input" type="text" name="type" placeholder="Genre" autocomplete="off" autofocus="true" class="hidden" /><br>
            <label for="status" ></label>
              <select id= "status-input" name="completed" class="hidden">
                <option value="true">Completed</option>
                <option value="false">Not Completed</option>
              </select><br>           
            <label for="status"></label>
            <select id= "rating-input" name="rating" class="hidden"> 
              <option value="Bad">1 (Bad)</option>
              <option value="Not that good">2 (Not good)</option>
              <option value="Ok">3 (Just OK)</option>
              <option value="Very Good">4 (Very good)</option>
              <option value="Excellent">5 (Must)</option>
            </select><br>
          </div>
        </div>
        
        <div class="submitAdd" >
          
        <form class="formSubmit" action="/add" method="post">
          <button id= "benjamin-button" class="hidden" type="submit">Submit</button>
        </form>
        </div>
      </form>
    </div>


    <div class="myLibrary"> 
      <form class="formLibrary" action="/myLibrary" method="get">
        <button id= "myLibraryButton" class="myLibraryButton" type="submit" name="list" onclick="myLibrary()"> <img class="icon"src="/styles/icons/library.svg" alt="book image">  My Library</button>    

        <div class="row">
          <div class="column">

           <!-- Form route to my archive -->
           <form class="formGoToLibrary" action="/library" method="get">
             <button id= "go-to-library-button" class="hidden" type="button" name="go-to-library-button" onclick="redirectToLibrary()">Go to Library</button>
           </form>
           <!-- Form route to my archive -->

            <div id= "mylibrary-bg-box" class="hidden">
              <!-- <form class="form-close-library" action="/add" method="post"> -->
                <% for (let book of listBooks) { %>
                  <div id= "mylibrary-books-box" class="hidden">
                  <%= book.title %> by <%= book.author %>
                </div>
                <% } %>
              <!-- </form> -->
            </div>
          </div>
        </div>

      </form>
    </div>
 
    
    <script>
      function addBook() {
        const hiddenInputs = document.querySelectorAll('.formAdd .hidden ');
        hiddenInputs.forEach(input => {
          input.classList.toggle('visible');
        });
      }

      function myLibrary() {
        const hiddenInputs = document.querySelectorAll('.formLibrary .hidden ');
        hiddenInputs.forEach(input => {
          input.classList.toggle('visible');
        });
      }

      function redirectToLibrary() {
        // Redirect to the myLibraryArchive.ejs file
        window.location.href = "/myLibraryArchive";
      }

    </script>

      
</body>
<%- include('footer.ejs'); -%>

 